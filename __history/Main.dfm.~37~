  object FDQ_Tareas: TFDQuery
    Connection = DM_DataModule.DataBase
    SQL.Strings = (
      'Select t.*, e.Nombre as Estado from Tarea t'
      'join Estado e on (e.EstadoKey = t.EstadoKey)'
      'where t.EstadoKey = :estadoKey and Activa = 1 ')
    Left = 720
    Top = 136
    ParamData = <
      item
        Name = 'ESTADOKEY'
        DataType = ftInteger
        ParamType = ptInput
        Value = Null
      end>
  end
